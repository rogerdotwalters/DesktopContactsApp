<Window
    x:Class="DesktopContactsApp.ContactDetailsWIndow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopContactsApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ContactDetailsWIndow"
    Width="300"
    Height="300"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="tbName" Margin="0,0,0,5" />
            <TextBlock Text="Email:"/>
            <TextBox x:Name="tbEmail" Margin="0,0,0,5" />
            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="tbPhone" Margin="0,0,0,5" />
            <Button
                x:Name="updateButton"
                Margin="0,0,0,5"
                Click="updateButton_Click"
                Content="Update" />
            <Button
                x:Name="closeButton"
                Margin="0,0,0,15"
                Click="CloseButton_Click"
                Content="Close"/>
            <Button
                x:Name="deleteButton"
                Margin="0,0,0,5"
                Background="Red"
                Click="deleteButton_Click"
                Content="Delete"
                Foreground="White" />
            
        </StackPanel>
    </Grid>
</Window>
